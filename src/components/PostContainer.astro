---
export type Props = {
  posts: {
    title: string;
    url: string;
  }[];
};

const { posts } = Astro.props;
---

<style>
  a {
    text-decoration: none;
    color: var(--primary-text-color);
    font-weight: 500;
  }

  a:hover {
    text-decoration: underline;
  }
</style>

<div class="container">
  {posts.map(post => (
    <a href={post.url}>{post.title}</a>
  ))}
</div>
